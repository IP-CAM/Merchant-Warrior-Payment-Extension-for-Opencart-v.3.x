{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="secure-submit-form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <!-- <div class="buttons"><a onclick="$('#form').submit();" class="button">{{ button_save }}</a></div> -->
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1><!-- <img src="view/image/payment.png" alt="" /> -->{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
  
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
  
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="secure-submit-form" class="form-horizontal">
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-test-private-key">{{ entry_merchant_id }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_mwarrior_merchant_id" value="{{ payment_mwarrior_merchant_id }}" placeholder="{{ payment_mwarrior_merchant_id }}" class="form-control"/>
                            {% if error_merchant_id %}
                                <span class="error">{{ error_merchant_id }}</span>
                            {% endif %}
                        </div>
                    </div>
  
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-test-private-key">{{ entry_api_key }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_mwarrior_api_key" value="{{ payment_mwarrior_api_key }}" placeholder="{{ payment_mwarrior_api_key }}" class="form-control"/>
                            {% if error_api_key %}
                                <span class="error">{{ error_api_key }}</span>
                            {% endif %}
                        </div>
                    </div>
            
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-test-private-key">{{ entry_api_passphrase }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_mwarrior_api_passphrase" value="{{ payment_mwarrior_api_passphrase }}" placeholder="{{ payment_mwarrior_api_passphrase }}" class="form-control"/>
                            {% if error_api_passphrase %}
                                <span class="error">{{ error_api_passphrase }}</span>
                            {% endif %}
                        </div>
                    </div>
            
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-test-private-key">{{ entry_currency }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_mwarrior_currency" value="{{ payment_mwarrior_currency }}" placeholder="{{ payment_mwarrior_currency }}" class="form-control"/>
                            {% if error_currency %}
                                <span class="error">{{ error_currency }}</span>
                            {% endif %}
                        </div>
                    </div>
            
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-mode">{{ entry_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mwarrior_order_status_id" id="input-mode" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_mwarrior_order_status_id %}
                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
            
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-mode">{{ entry_order_status_declined }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mwarrior_order_status_declined_id" id="input-mode" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_mwarrior_order_status_declined_id %}
                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
            
