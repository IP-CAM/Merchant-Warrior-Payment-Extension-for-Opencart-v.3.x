                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-mode">{{ entry_gateway_mode }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mwarrior_gateway_mode" id="input-mode" class="form-control">
                                {% if payment_mwarrior_gateway_mode %}
                                    <option value="1" selected="selected">{{ text_live }}</option>
                                    <option value="0">{{ text_test }}</option>
                                {% else %}
                                    <option value="1">{{ text_live }}</option>
                                    <option value="0" selected="selected">{{ text_test }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-mode">Use Hosted Payments</label>
                        <div class="col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="payment_mwarrior_use_hosted_payments" value="1"
                                        {% if (payment_mwarrior_use_hosted_payments ?? false) %}
                                            checked
                                        {% endif %}
                                    >
                                </label>
                            </div>
                        </div>
                    </div>
            
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-mode">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mwarrior_status" id="input-mode" class="form-control">
                                {% if payment_mwarrior_status == true %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
            
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-test-private-key">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_mwarrior_sort_order" value="{{ payment_mwarrior_sort_order }}" placeholder="{{ entry_sort_order }}" class="form-control"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
